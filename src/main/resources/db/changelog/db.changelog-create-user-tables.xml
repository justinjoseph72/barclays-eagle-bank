<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
  
  <changeSet id="db.changelog-create-user-tables-party-table" author="justin.joseph">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="party"/>
      </not>
    </preConditions>
    <createTable tableName="party">
      <column name="id" type="uuid">
        <constraints nullable="false" primaryKey="true" primaryKeyName="party_pk"/>
      </column>
      <column name="external_id" type="varchar(50)">
        <constraints nullable="false" primaryKey="true" primaryKeyName="party_pk"/>
      </column>
      <column name="status" type="varchar(15)">
        <constraints nullable="false"/>
      </column>
      <column name="record_creation_timestamp" type="timestamp without time zone">
        <constraints nullable="false" primaryKey="true" primaryKeyName="party_pk"/>
      </column>
    
    </createTable>
  
  </changeSet>
  
  
  <changeSet id="db.changelog-create-user-tables-party-profile-table" author="justin.joseph">
    
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="party_profile"/>
      </not>
    </preConditions>
    <createTable tableName="party_profile">
      
      <column name="party_id" type="uuid">
        <constraints nullable="false" primaryKey="true" primaryKeyName="party_profile_pk"/>
      
      </column>
      <column name="name" type="varchar(300)">
        <constraints nullable="false"/>
      </column>
      <column name="phone_number" type="varchar(15)">
        <constraints nullable="false"/>
      </column>
      <column name="email" type="varchar(150)">
        <constraints nullable="false"/>
      </column>
      <column name="record_creation_timestamp" type="timestamp without time zone">
        <constraints nullable="false" primaryKey="true" primaryKeyName="party_profile_pk"/>
      </column>
    
    
    </createTable>
  </changeSet>
  
  <changeSet id="db.changelog-create-user-tables-party-address-table" author="justin.joseph">
    
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="party_address"/>
      </not>
    </preConditions>
    <createTable tableName="party_address">
      
      <column name="party_id" type="uuid">
        <constraints nullable="false" primaryKey="true" primaryKeyName="party_address_pk"/>
      </column>
      <column name="line1" type="varchar(20)">
        <constraints nullable="false"/>
      </column>
      <column name="line2" type="varchar(20)">
        <constraints nullable="false"/>
      </column>
      <column name="line3" type="varchar(20)">
        <constraints nullable="false"/>
      </column>
      <column name="town" type="varchar(15)">
        <constraints nullable="false"/>
      </column>
      <column name="county" type="varchar(150)">
        <constraints nullable="false"/>
      </column>
      <column name="postcode" type="varchar(10)">
        <constraints nullable="false"/>
      </column>
      <column name="record_creation_timestamp" type="timestamp without time zone">
        <constraints nullable="false" primaryKey="true" primaryKeyName="party_address_pk"/>
      </column>
    
    
    </createTable>
  
  
  </changeSet>

</databaseChangeLog>