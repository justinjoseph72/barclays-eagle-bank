<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
  
  
  
  <changeSet id="create-transaction-table" author="justin.joseph">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="transaction_log"/>
      </not>
    </preConditions>
    <createTable tableName="transaction_log">
      <column name="id" type="uuid">
        <constraints nullable="false" primaryKey="true" primaryKeyName="transaction_pk"/>
      </column>
      <column name="transaction_id" type="varchar(50)">
        <constraints nullable="false" primaryKey="true" primaryKeyName="transaction_pk"/>
      </column>
      <column name="is_credit" type="boolean">
        <constraints nullable="false"/>
      </column>
      <column name="reference" type="varchar(50)">
        <constraints nullable="true"/>
      </column>
      <column name="party_id" type="uuid" >
        <constraints nullable="false" />
      </column>
      <column name="account_id" type="uuid" >
        <constraints nullable="false" />
      </column>
      <column name="status" type="varchar(15)">
        <constraints nullable="false"/>
      </column>
      <column name="amount" type="numeric(15,2)">
        <constraints nullable="false" />
      </column>
      <column name="currency" type="varchar(3)">
        <constraints nullable="false"/>
      </column>
      <column name="record_creation_timestamp" type="timestamp without time zone">
        <constraints nullable="false" primaryKey="true" primaryKeyName="account_pk"/>
      </column>
      
    </createTable>
  </changeSet>
  
  

</databaseChangeLog>